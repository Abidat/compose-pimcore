#!/usr/bin/env sh

cd "$(dirname "$(dirname "$(readlink -f $0)")../")"

# we need some configuration
if [ -e .env ]; then
    source "$(pwd)/.env"
elif [ -e .env-sample ]; then
    source "$(pwd)/.env-sample"
else
    echo "no config found"
    exit 1
fi

projectName=$(echo $BASEHOST | sed 's/[^a-zA-Z]//g')

docker-compose -p "$projectName" "$@"
